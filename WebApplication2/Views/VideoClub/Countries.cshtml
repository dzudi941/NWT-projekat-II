@model IEnumerable<WebApplication2.Models.Country>

@{
    ViewBag.Title = "Countries";
}

<h2>Countries</h2>

<p>
    @Html.ActionLink("Create New", "CreateCountry")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteCountry", new { id=item.CountryId })
        </td>
    </tr>
}

</table>
