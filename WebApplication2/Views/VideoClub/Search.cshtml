@model WebApplication2.ViewModels.SearchViewModel
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

@using (Html.BeginForm("Search", "VideoClub", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-3">
                @Html.EditorFor(model => model.MovieName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Movie name" } })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(model => model.CountryName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Country name" } })
            </div>
            <div class="col-md-3">
                @Html.EditorFor(model => model.ActorName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Actor name" } })
            </div>
            <input type="submit" class="btn btn-default" />
        </div>
    </div>
}