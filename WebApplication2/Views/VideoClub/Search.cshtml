
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

@using (Html.BeginForm("Search", "VideoClub", FormMethod.Post ))
{
    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-3">
                <input class="form-control" type="text" placeholder="Movie name" name="Movie.Name" />
            </div>
            <div class="col-md-3">
                <input class="form-control" type="text" placeholder="Country" name="Movie.Country" />
            </div>
            <div class="col-md-3">
                <input class="form-control" type="text" placeholder="Actor" name="Movie.Actor" />
            </div>
            <input type="submit" class="btn btn-default" />
        </div>
    </div>
}